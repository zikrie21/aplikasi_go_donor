<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_createdonor">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ib_back"
                android:src="@drawable/back"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="News"
                android:textColor="@color/merah"
                android:textSize="24dp" />

            <ImageButton
                android:id="@+id/news1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_news"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginStart="55dp"
                android:src="@drawable/news1" />

            <ImageButton
                android:id="@+id/news2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news1"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginStart="55dp"
                android:src="@drawable/news2" />

            <ImageButton
                android:id="@+id/news3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news2"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginStart="55dp"
                android:src="@drawable/news3" />

            <ImageButton
                android:id="@+id/news4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news3"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginStart="55dp"
                android:src="@drawable/news4" />

            <ImageButton
                android:id="@+id/news5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news4"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginStart="55dp"
                android:src="@drawable/news5" />

            <ImageButton
                android:id="@+id/news6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news5"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginStart="55dp"
                android:src="@drawable/news1" />

            <ImageButton
                android:id="@+id/news7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news6"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginStart="55dp"
                android:src="@drawable/news2" />




        </RelativeLayout>
    </ScrollView>
</FrameLayout>