<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageView
          android:id="@+id/atas"
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:scaleType="fitXY"
          android:src="@drawable/gmbr_putih"></ImageView>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="106dp"
          android:layout_marginTop="70dp"
          android:layout_marginEnd="105dp"
          android:src="@drawable/logo"></ImageView>

      <TextView
          android:id="@+id/text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/atas"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="60dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="59dp"
          android:text="Lengkapi data diri anda dibawah ini ya!"
          android:textSize="15dp"></TextView>

      <EditText
          android:id="@+id/nama"
          android:layout_width="270dp"
          android:layout_height="50dp"
          android:layout_below="@id/text"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="70dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="71dp"
          android:background="@drawable/garis_button"
          android:hint="Nama Lengkap"
          android:inputType="text"
          android:paddingLeft="15dp"
          android:textColor="@color/white"></EditText>

      <EditText
          android:id="@+id/nomor"
          android:layout_width="270dp"
          android:layout_height="50dp"
          android:layout_below="@id/nama"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="70dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="71dp"
          android:background="@drawable/garis_button"
          android:hint="Nomor Telepon"
          android:inputType="number"
          android:paddingLeft="15dp"
          android:textColor="@color/white"></EditText>

      <EditText
          android:id="@+id/email"
          android:layout_width="270dp"
          android:layout_height="50dp"
          android:layout_below="@id/nomor"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="70dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="71dp"
          android:background="@drawable/garis_button"
          android:hint="Email"
          android:inputType="textEmailAddress"
          android:paddingLeft="15dp"
          android:textColor="@color/white"></EditText>

      <EditText
          android:id="@+id/domisili"
          android:layout_width="270dp"
          android:layout_height="50dp"
          android:layout_below="@id/email"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="70dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="71dp"
          android:background="@drawable/garis_button"
          android:hint="Domisili"
          android:inputType="textEmailAddress"
          android:paddingLeft="15dp"
          android:textColor="@color/white"></EditText>

      <EditText
          android:id="@+id/password"
          android:layout_width="270dp"
          android:layout_height="50dp"
          android:layout_below="@id/domisili"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="70dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="71dp"
          android:background="@drawable/garis_button"
          android:hint="Masukan Kata Sandi"
          android:inputType="textPassword"
          android:paddingLeft="15dp"
          android:textColor="@color/white"></EditText>

      <EditText
          android:id="@+id/konfir"
          android:layout_width="270dp"
          android:layout_height="50dp"
          android:layout_below="@id/password"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="70dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="71dp"
          android:background="@drawable/garis_button"
          android:hint="Konfirmasi Kata Sandi"
          android:inputType="textPassword"
          android:paddingLeft="15dp"
          android:textColor="@color/white"></EditText>


      <Button
          android:id="@+id/btn_daftar"
          android:layout_width="270dp"
          android:layout_height="60dp"
          android:layout_below="@+id/konfir"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="70dp"
          android:layout_marginTop="30dp"
          android:layout_marginEnd="71dp"
          android:layout_marginBottom="15dp"
          android:backgroundTint="@color/merah"
          android:text="Register"
          android:onClick="daftar"
          android:background="@drawable/rounded_button"></Button>

    </RelativeLayout>

  </ScrollView>

</RelativeLayout>